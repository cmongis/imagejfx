<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root fx:id="gridPane" hgap="15.0" maxWidth="1.7976931348623157E308" type="GridPane" vgap="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ListView fx:id="stepListView" maxWidth="1.7976931348623157E308" prefHeight="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
      <TextField fx:id="moduleSearchTextField" promptText="Type a step name, e.g. Gaussian Blur..." GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="addButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAddButtonClicked" text="Add" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <MenuButton fx:id="menuButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="normal" text=".... or find from the menu" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
      <FontAwesomeIconView glyphName="SEARCH" size="16.0" GridPane.rowIndex="1" />
      <MenuButton fx:id="workflowConfigButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="normal" GridPane.columnIndex="2">
        <items>
            <MenuItem mnemonicParsing="false" onAction="#importFromHistory" text="Import from history">
               <graphic>
                  <FontAwesomeIconView glyphName="HISTORY" />
               </graphic>
            </MenuItem>
          <MenuItem mnemonicParsing="false" onAction="#loadWorkflow" text="Load workflow">
               <graphic>
                  <FontAwesomeIconView glyphName="SAVE" />
               </graphic>
            </MenuItem>
          <MenuItem mnemonicParsing="false" onAction="#saveWorkflow" text="Save workflow">
               <graphic>
                  <FontAwesomeIconView glyphName="OPEN" />
               </graphic>
            </MenuItem>
        </items>
         <graphic>
            <FontAwesomeIconView glyphName="GEARS" styleClass="smaller" />
         </graphic>
      </MenuButton>
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints maxHeight="29.0" minHeight="10.0" prefHeight="23.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</fx:root>
