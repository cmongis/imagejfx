<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="inputHBox" alignment="CENTER">
               <children>
                  <Label maxWidth="1.7976931348623157E308" styleClass="h4" text="Input" />
                  <ToggleButton fx:id="singlePlaneToggleButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Single plane" />
                  <ToggleButton fx:id="allPlanesToggleButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="The whole image" />
               </children>
               <styleClass>
                  <String fx:value="toggle-group" />
                  <String fx:value="vertical" />
               </styleClass>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </VBox>
            <FontAwesomeIconView glyphName="ARROW_DOWN" size="30">
               <styleClass>
                  <String fx:value="down-arrow" />
                  <String fx:value="with-padding" />
                  <String fx:value="with-margin" />
               </styleClass></FontAwesomeIconView>
            <VBox fx:id="workflowVBox" />
            <FontAwesomeIconView glyphName="ARROW_DOWN" layoutX="46.0" layoutY="104.0" size="30">
               <styleClass>
                  <String fx:value="down-arrow" />
                  <String fx:value="with-padding" />
               </styleClass></FontAwesomeIconView>
            <VBox fx:id="resultbox">
               <children>
                  <Button fx:id="testButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="warning" text="Test on one image">
                     <graphic>
                        <FontAwesomeIconView glyphName="CHECK_SQUARE_O" />
                     </graphic></Button>
                  <Button fx:id="startButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Process all">
                     <graphic>
                        <FontAwesomeIconView glyphName="LIST_ALL" />
                     </graphic>
                  </Button>
               </children>
               <styleClass>
                  <String fx:value="darker-background" />
                  <String fx:value="with-padding" />
                  <String fx:value="vbox" />
               </styleClass>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </center>
</fx:root>
