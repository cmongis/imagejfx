<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="GridPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#scanFolder" text="Scan folder" GridPane.rowIndex="1">
         <graphic>
            <FontAwesomeIconView glyphName="FOLDER" />
         </graphic>
      </Button>
      <Label minHeight="50.0" minWidth="100.0" text="Your project is empty. You can scan a folder to add all its images automatically or add them one by one." textAlignment="CENTER" wrapText="true" />
      <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="or" textAlignment="CENTER" GridPane.rowIndex="2" />
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addImages" text="Add images" GridPane.rowIndex="3">
         <graphic>
            <FontAwesomeIconView glyphName="FILE_PICTURE_O" />
         </graphic>
      </Button>
   </children>
</fx:root>
