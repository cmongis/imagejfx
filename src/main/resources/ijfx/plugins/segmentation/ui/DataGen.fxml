<fx:root prefHeight="354.0" prefWidth="514.0" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <RadioButton fx:id="trainingRadio" mnemonicParsing="false" text="Training Data" />
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="2.0">
               <children>
                  <Label text="Membrane width : " />
                  <TextField fx:id="widthField" prefHeight="25.0" prefWidth="149.0" promptText="membrane width" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Dataset size :" />
                  <Text fx:id="numTrainingData" strokeType="OUTSIDE" strokeWidth="0.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <RadioButton fx:id="testRadio" mnemonicParsing="false" text="Test Data" />
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="seedingBtn" mnemonicParsing="false" text="Seeding" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Dataset size :" />
                  <Text fx:id="numTestData" strokeType="OUTSIDE" strokeWidth="0.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <VBox fx:id="feedbackBox" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Button fx:id="generateBtn" mnemonicParsing="false" text="Generate" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </center>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <bottom>
      <VBox prefHeight="64.0" prefWidth="504.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Button fx:id="clearDataBtn" mnemonicParsing="false" text="Clear data" />
         </children>
      </VBox>
   </bottom>
